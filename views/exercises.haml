%html
    %head
        %title List of exercies
    %body

    :javascript
        function set_delete_id() {
            action = document.forms[1].action 
            document.forms[1].action.value = action + '/' + document.forms[1].id.value
            alert( document.forms[1].action.text );
            # document.forms[1].submit();
        }
    %form{ :method => "post", :action => "http://localhost:4567/workout_api/save_exercise/name/description/123"}
        %input{ :type => "submit", :value => "create"}
    
    %a{ :href => "http://localhost:4567/workout_api/show_exercises/"}show

    %table{:border => "1", :cellspacing => "0"}
        -@exercises.each do |e|
            %tr
                %td #{e.id}
                %td #{e.name}
                %td #{e.description}
                %td #{e.exercise_unit_id}
                %td 
                    %form{ :method => "delete", :action => "http://localhost:4567/workout_api/delete_exercise" }
                        %input{ :type => "hidden", :value =>"#{e.id}" }
                        %input{ :type => "button",  :value => "Delete", :onclick => "this.form.submit()"}
